<div class="container">
  <div class="col">
    <div class="card-product my-5">
      <div class="card-product-infos">
        <h1><%= @pet.name %></h1>
        <p><%= @pet.species %> - <strong><%= @pet.address %></strong></p>
        <p>Found <%= @pet.found_days_ago %> days ago</p>
        <% if @pet.dead? %>
          <i class="fas fa-skull-crossbones"></i>
        <% else %>
          <i class="fas fa-thumbs-up"></i>
        <% end %>
      </div>
    </div>
    <%= link_to pets_path do %>
      <i class="fas fa-home"></i>
    <% end %>
    <%= link_to edit_pet_path(@pet) do %>
      <i class="fas fa-pen-square"></i>
    <% end %>
    <%= link_to pet_path(@pet), method: :delete, data: { confirm: "Take #{@pet.name} to the farm?"} do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>
</div>